{
  "compilerOptions": {
    "target": "es2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@go/*": ["vendor/*"]
    },
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importsNotUsedAsValues": "remove",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "lib": ["webworker", "dom"]
  },
  "exclude": ["vendor", "dist"]
}
