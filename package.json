{
  "name": "rgraphql",
  "version": "0.0.0-development",
  "description": "Real-time streaming GraphQL common protobufs.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rgraphql/rgraphql.git"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "esbuild ./index.ts --outdir=./dist --bundle && tsc --emitDeclarationOnly --declaration --project tsconfig.json",
    "format": "prettier --write './!(vendor|dist)/**/(*.ts|*.tsx|*.html|*.css)'",
    "prepare": "npm run patch && go mod vendor",
    "gen": "make genproto",
    "test": "jest",
    "test:watch": "jest --watch",
    "ci": " npm run lint && npm run test && npm run build",
    "lint": "eslint -c .eslintrc.js --ext .ts ./src",
    "gen-proto:go": "make genproto",
    "gen-proto": "pbjs -t static-module -w commonjs -o src/proto/proto.js ./rgraphql.proto && pbts -o src/proto/proto.d.ts src/proto/proto.js",
    "github-release": "conventional-github-releaser -p angular",
    "semantic-release": "semantic-release",
    "patch": "patch-package --use-yarn --patch-dir ./node_modules/@aperturerobotics/ts-common/patches",
    "precommit": "npm run format"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testPathIgnorePatterns": [
      "/dist/"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverage": false
  },
  "devDependencies": {
    "@aperturerobotics/ts-common": "^0.1.0",
    "@types/es6-promise": "^3.3.0",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^28.1.6",
    "@types/long": "^4.0.2",
    "@types/node": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "esbuild": "^0.14.49",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jsdoc": "^39.3.3",
    "eslint-plugin-no-null": "^1.0.2",
    "jest": "^28.1.3",
    "rimraf": "^3.0.2",
    "semantic-release": "^19.0.3",
    "shx": "^0.3.4",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "ts-poet": "^4.15.0",
    "ts-proto": "^1.118.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "graphql": "^16.5.0",
    "protobufjs": "^7.0.0"
  }
}
